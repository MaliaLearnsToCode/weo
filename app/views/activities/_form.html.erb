<%= simple_form_for([@itinerary, @activity],
  data: {
    insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
  }) do |f| %>
  <%= f.input :name %>
  <%= f.input :detail %>
  <%= f.input :location %>
  <%= f.input :max_participants %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.association :interest_type %>
  <%= f.input :photo, as: :file, input_html: { single: true } %>
  <center><%= f.submit "create", class: "button button1" %></center>
<% end %>
