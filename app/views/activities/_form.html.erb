<div id="activity_form">
<%= simple_form_for([itinerary, activity],
  data: {
    insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
  }) do |f| %>
  <%= f.input :name %>
  <%= f.input :detail %>
  <%= f.input :location %>
  <%= f.input :max_participants %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.association :interest_type %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }%>

  <center><%= f.submit "create", class: "btn btn-success" %>  <%= link_to "Back to itinerary", itinerary_path(@itinerary), class: "btn btn-primary" %></center>

<% end %>
</div>
