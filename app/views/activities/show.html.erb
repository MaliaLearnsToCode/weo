<div class="container">

  <div class="1/3">
    <div class="d-flex flex-row-reverse">
      <div class="btn btn-info m-2">
      <p>Back</p>
      </div>
    </div>
    <div class="frank">
      <img src="https://images.unsplash.com/photo-1532634922-8fe0b757fb13?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2672&q=80" width = 400px height = 320px >
    </div>
  </div>

  <div class="2/3">
    <div class="d-flex flex-row-reverse time and date">
      <p><%= @activity.start_time %></p>
      <p><%= @activity.end_time.strftime("%l %M")%></p>
    </div>
    <div class="name">
      <p><%= @activity.name %></p>
    </div>
    <div class="detail bg-light text-black">
      <p><%= @activity.detail %></p>
    </div>
  </div>

  <div class="3/3 d-flex">
    <div class="">
      <div class="profile and name bg-primary text-black">
        <div class="profile">
        </div>
        <div class="name">
          <%= User.first.first_name %>
          <p style="font-size:100px"><sup>1</sup>&frasl;<sub>2</sub></p>
        </div>
      </div>
    </div>
    <div class="flex-grow-1 text-black">

      <div>
      <p><%= @activity.location %></p>
      </div>
      <div>
      <img src="https://snazzy-maps-cdn.azureedge.net/assets/1243-xxxxxxxxxxx.png?v=20220106114208" width = 290px height = 200px >
      </div>
    </div>
  </div>

</div>
