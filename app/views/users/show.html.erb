<body>

  <div id="profile_banner">
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},
  class: "dropdown-item" %>
      <div>
        <% @user.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class: "avatar_profile"%>
        <% end %>
      </div>


      <div id="logout" class="btn btn-primary">
        Logout
      </div>

  </div>


  <div id="name">
    <%= "#{current_user.first_name}" %>
  </div>

<div id="rating">
  <>
</div>


  <div id="review_container">
    <p> Reviews </p>

    <div>
      <h5 id="reviewtitle"></h5>
      <div id="review-border">
        <div id="review-card">
          <%= render "reviewed", user:@user %>
        </div>
          <div id="reviewtop" class="flex-column">
            <div id="reviewer-name">
              <%= "#{current_user.first_name}" %>
            </div>
            <div id="locationdate">
              <%= "Osaka, Jan 2021" %>
            </div>
          </div>
            <div id="review">
              <%= "This is a great review!" %>
            </div>
        </div>
      </div>
    </div>

  </div>
</body>
