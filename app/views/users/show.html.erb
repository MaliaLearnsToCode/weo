
<div>

  <div id="profile_banner">
      <div>
        <% @user.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class: "avatar_profile"%>
        <% end %>
      </div>


    <%= link_to destroy_user_session_path, data: {turbo_method: :delete},
    class: "dropdown-item", :action => 'go' do %>
      <div id="logout" class="btn btn-success">
        Logout
      </div>
    <% end %>
  </div>


  <div id="name">
    <%= "#{@user.first_name}" %>
  </div>

  <div class="my_itineraries">
    <%= link_to my_itineraries_itineraries_path, :action => 'go' do %>
      <div id="my_circle"></div>
      <div class="m-0 my_text" style="">My</div>
      <div class="m-0 itinerary_text">Itineraries</div>
    <% end %>
  </div>

  <div class="create-itinerary">
    <%= link_to new_itinerary_path, :action => 'go' do %>
      <div class="m-0 create-itinerary-text" style="">Create Itineraries</div>
      <div class="create_circle"></div>
    <% end %>
  </div>

  <div id class="">
    <h2><center>Rating: <u><strong>4.8</strong></u></center></h2>
  </div>


  <div id="review_container">
    <p> Reviews </p>

    <div>
      <h5 id="reviewtitle"></h5>
      <div id="review-border">
        <div id="review-card">
          <%= render "reviewed", user:@user %>
        </div>
        </div>
      </div>
    </div>

  </div>
