<div class="col-10" style = "width:300px; margin:10px auto;" >
  <div class="card border " style="background-color:#878383;">
    <div class="card-infos mt-3 mx-4">
      <div class="d-flex justify-content-between">
        <p style="color:white;"><u><strong><%= itinerary.title%></u></strong></p>
        <p style="color:white;"> by: <strong><%= itinerary.user.first_name%></strong></p>
      </div>
        <div class="">
          <div class="itinerary-cover">
            <% if itinerary.photos.attached? %>
              <%= cl_image_tag itinerary.photos[0].key, :width=>100, :height=>100%>
            <% else %>
              <%= image_tag "sofa.jpg", alt: "photo placeholder", width: 200, height: 200 %>
            <% end %>
          </div>
        </div>
      </div>
    <div class= "d-flex justify-content-between mx-4 mt-3">
      <div>
        <p style="color:white;"><%= itinerary.city %>, <br> <strong><%= itinerary.country %></strong> </p>
        </div>
      <div>
        <p style="color:white;">  <%= "#{itinerary.start_date.strftime("%-d/%^b/%-y")}"%> to <br><%= "#{itinerary.end_date.strftime("%-d/%^b/%-y")}" %></p>
      </div>
    </div>
      <center><%= link_to "see details", itinerary_path(itinerary), class: "btn btn-success mb-4" %> </center>
  </div>

</div>
