<div class= "container" style="background-color: #F1E0E0;">
  <%= simple_form_for @itinerary do |f| %>
    <div class="title-where" style="color: #505050;">
      <h3>Where do you plan to go?</h3>
      <div id="geocoder" class="geocoder1"></div>
    </div>

    <div class="location-input location_country" style="color: #505050;">
      <%= f.input :country %>
      <%= f.input :city %>
    </div>

    <div class='d-flex justify-content-center ' style="color: #505050;">
      <div id='map' style="width: 80%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

    </div>

    <div class="title-when" style="color: #505050;">
      <h3>When do you want to go?</h3>
    </div>
    <div class="date-input" style="color: #505050;">
      <label for="start_date">From:</label>
      <input type="date" id="start2" name="start_date">
      <label for="end_date">Until:</label>
      <input type="date" id="end2" name="end_date" >
    </div>

    <div class="title-what" style="color: #505050;">
      <h3>Some more information about your trip</h3>
    </div>
    <div class="details-input" style="color: #505050;">
      <%= f.input :title %>
      <%= f.input :description %>
    </div>

    <div class="title-what" style="color: #505050;">
      <h3>Upload a photo</h3>
    </div>
    <div class="details-input" style="color: #505050;">
      <%= f.input :photos, as: :file, input_html: { multiple: true }%>
    </div>



    <div class="submits mb-5 pb-5" style="color: #505050;">
      <%= f.submit "Save itinerary", input_html: { style: "display: none" } %>
      <%= f.submit 'Add activities', input_html: { style: "display: none" } %>
    </div>


  <% end %>



</div>
