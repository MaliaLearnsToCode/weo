<div class= "d-flex">
<div>
<h1 style="color: #505050;"> <strong><%="#{@itineraries.first.user.first_name}"%>'s</strong> <br> Itineraries </h1>
</div>
<div class= "justify-center-between mx-auto my-auto">
<%=link_to "Back to #{@itineraries.first.user.first_name}'s Profile", user_path(@itineraries.first.user), class: "btn btn-success mx-4" %>
</div>
</div>

<div class= "container" style="background-color: #F1E0E0;">
  <div class="row">

    <!-- TABS START -->

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="current-tab" data-bs-toggle="tab" data-bs-target="#current" type="button" role="tab" aria-controls="current" aria-selected="true"><strong>Current</strong></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="false"><strong>Upcoming</strong></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab" aria-controls="past" aria-selected="false"><strong>Past</strong></button>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <!-- CONFIRMED TAB -->

      <div class="tab-pane fade show active" id="current" role="tabpanel" aria-labelledby="current-tab">
        <div class="row">
          <% @current_itineraries.each do |itinerary| %>
            <%= render "my_itinerary", itinerary: itinerary %>
          <% end %>
        </div>
      </div>

      <div class="tab-pane fade" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
        <div class="row">
          <% @upcoming_itineraries.each do |itinerary| %>
            <%= render "my_itinerary", itinerary: itinerary %>
          <% end %>
        </div>
      </div>

      <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
        <div class="row">
          <% @past_itineraries.each do |itinerary| %>
            <%= render "my_itinerary", itinerary: itinerary %>
          <% end %>
        </div>
      </div>

    </div>
    <!-- TABS END -->
  </div>
</div>
